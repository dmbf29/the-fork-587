<div class="container pt-5">
  <div class="row">
    <div class="col-md-8 bg-white border p-3">
      <%= image_tag "http://source.unsplash.com/collection/3099344/1000x500", width: "100%", class: "border shadow mb-5" %>

      <%# hide the form
      query selctor for the button
      add event listener for the button
      query selctor for the form
      on click, show the form %>


      <div data-controller="collapsible-form">
        <button data-collapsible-form-target="button" data-action="click->collapsible-form#expandDropdown" class='btn btn-outline-primary'>
          Leave a Review
        </button>
        <%= render 'reviews/form', restaurant: @restaurant, review: @review %>
      </div>
      <h3 class="mt-3">
        <%= pluralize @restaurant.reviews.count, "review" %>
      </h3>
      <%= render 'reviews/index', restaurant: @restaurant %>
    </div>
    <div class="col-md-4">
      <%= render 'restaurants/info', restaurant: @restaurant %>
    </div>
  </div>
</div>
